{
    "manifest_version": 2,
    "name": "Simple Filter Extension",
    "version": "1",
    "icons": {
        "48": "icons/48.jpg"
    },
    "description": "To filter out nasty words",
    "content_script": [
        {
            "matches": ["<all_urls>"], // all_urls is a special value that matches all URLs with
                                        // http, https, ws, wss, ftp, data, file
            "js": ["filter.js"]
        }
    ]
}