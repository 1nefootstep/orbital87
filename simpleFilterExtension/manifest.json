{
    "manifest_version": 2,
    "name": "Simple Filter Extension",
    "version": "1",
    "icons": {
        "48": "icons/48.jpg"
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "browser_style": true,
        "default_title": "Settings",
        "default_popup": "./src/test.html"
      },
    "description": "To filter out nasty words",
    "content_scripts": [
        {
            "matches": ["<all_urls>"], 
            "js": [
                "./src/script.js",
                "./src/spoiler.js"
            ]
        }
    ]
}